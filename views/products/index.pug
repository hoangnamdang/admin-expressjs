extends ../layouts/header 
block content

    .container
        .row 
            form.form-inline
                .form-group.mx-sm-3.mb-2
                    label.sr-only(for='inputPassword2') Password
                    input#inputPassword2.form-control(type='password', placeholder='Key search')
                button.btn.btn-primary.mb-2(type='submit') Seach

        .row
         each product in products
            .col-md-3
                .card(style='width: 18rem;')
                img.card-img-top(src='https://via.placeholder.com/150/FFFF00/000000?Text=WebsiteBuilders', alt='Card image cap')
                .card-body
                    h5.card-title=product.name
                    p.card-text=product.description
                    a.btn.btn-primary(href='/cart/add/'+ product.id) Add to cart
        
